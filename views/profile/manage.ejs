<h2>Manage your profile!</h2>
<hr>

<div class="row">
    <div class="col-md-3">
        <ul class="nav nav-pills flex-column">
            <li class="nav-item">
                <a class="nav-link active" href="/User/Profile">Profile</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/User/Profile/ChangePassword">Password</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/User/Profile/ExternalLogins">External logins</a>
            </li>
        </ul>
    </div>
    <div class="col-md-5">
        <form action="/User/Profile" method="post">
            <div class="form-group">
                <label for="email">Email address</label>
                <input type="text" class="form-control" id="email" name="email" value="<%= user.email %>">
            </div>
            <div class="form-group">
                <label for="mobile">Mobile phone</label>
                <input type="text" class="form-control" id="mobile" name="mobile" disabled>
            </div>
            <button type="submit" class="btn btn-outline-secondary">Update</button>
            
            <%if (locals.errorMessages) {%>
                <div class="error-box">
                    <% errorMessages.forEach(function(message) { %>
                        <p><%= message %></p>
                    <% }); %>
                </div>
            <%}%>
        </form>
    </div>
</div>