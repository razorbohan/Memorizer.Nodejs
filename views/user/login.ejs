<h2 class="col-auto">Log in to proceed</h2>
<div class="login-form row">
    <div class="local-login col-md-4">
        <div class="row justify-content-left my-3">
            <h4 class="col-12">Use a local account to log in</h2>
                <form id="login-form" method="post" class="col-12">
                    <hr>
                    <div class="form-group">
                        <label for="login">Email</label>
                        <input type="text" name="login" id="login" class="form-control" placeholder="Email">
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" name="password" id="password" class="form-control" placeholder="Password">
                    </div>
                    <%if (message) {%>
                        <div class="error-box">
                            <p><%=message%></p>
                        </div>
                    <%}%>
                        <div class="form-group">
                            <button type="submit" id="submitLogin" class="btn btn-primary">Log in</button>
                        </div>
                    </form>
                </div>
    </div>

    <div class="external-login col-md-4 offset-md-3">
        <div class="row justify-content-left my-3">
            <h4 class="col-12">Use an external service to log in</h2>
                <div class="login-providers col-12">
                    <hr>
                    <%if (locals.loginProviders) {%>
                        <% loginProviders.forEach(function(loginProvider) { %>
                            <a href="/User/Login/<%= loginProvider.Name %>" class="btn btn-block btn-social btn-lg btn-<%= loginProvider.ClassName %>">
                                <i class="fa fa-<%= loginProvider.ClassName %>"></i>Sign in with <%= loginProvider.Name %>
                            </a>
                        <% }); %>
                    <%}%>
                </div>
        </div>
    </div>
    
<style>
    footer {
        display: none;
    }
</style>

<script src="/validate-bundle.js"></script>